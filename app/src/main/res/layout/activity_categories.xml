<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david_cohn.ezhear.Categories">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category in Words:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="46dp"
        android:textAlignment="center"
        android:singleLine="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/button_material_dark" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Animals"
        android:id="@+id/button_animals"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/link_text_material_light"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="showAnimalsClick"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Countries"
        android:id="@+id/button_countries"
        android:layout_below="@+id/button_animals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:background="@color/background_floating_material_dark"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Colors"
        android:id="@+id/button_colors"
        android:layout_below="@+id/button_countries"
        android:layout_alignRight="@+id/button_countries"
        android:layout_alignEnd="@+id/button_countries"
        android:background="@drawable/abc_cab_background_top_material"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Food"
        android:id="@+id/button_food"
        android:layout_below="@+id/button_colors"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@color/abc_search_url_text_normal" />
</RelativeLayout>
